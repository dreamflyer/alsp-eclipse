<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.mulesoft.lsp4e.languageServer">
      <server
            class="org.mule.alsp.ALSPConnectionProvider"
            id="org.mule.alsp.server"
            label="org.mule.alsp.server">
      </server>
      <contentTypeMapping
            contentType="org.mule.raml"
            id="org.mule.alsp.server">
      </contentTypeMapping>
      <contentTypeMapping
            contentType="org.mule.syaml"
            id="org.mule.alsp.server">
      </contentTypeMapping>
      <contentTypeMapping
            contentType="org.mule.sjson"
            id="org.mule.alsp.server">
      </contentTypeMapping>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
         <content-type
               base-type="org.eclipse.core.runtime.text"
               describer="org.mule.alsp.contenttypes.ALSPRamlContentDescriber"
               file-extensions="raml"
               id="org.mule.raml"
               name="RAML File"
               priority="normal">
         </content-type>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
         <content-type
               base-type="org.eclipse.core.runtime.text"
               describer="org.mule.alsp.contenttypes.ALSPSyamlContentDescriber"
               file-extensions="yaml"
               id="org.mule.syaml"
               name="SYAML File"
               priority="normal">
         </content-type>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
         <content-type
               base-type="org.eclipse.core.runtime.text"
               describer="org.mule.alsp.contenttypes.ALSPSjsonContentDescriber"
               file-extensions="json"
               id="org.mule.sjson"
               name="SJSON File"
               priority="normal">
         </content-type>
   </extension>
   <extension
         name="RAML Editor"
         point="org.eclipse.ui.editors">
         <editorContentTypeBinding
               contentTypeId="org.mule.raml"
               editorId="org.eclipse.ui.genericeditor.GenericEditor">
   		</editorContentTypeBinding>
   </extension>
   <extension
         name="SYAML Editor"
         point="org.eclipse.ui.editors">
         <editorContentTypeBinding
               contentTypeId="org.mule.syaml"
               editorId="org.eclipse.ui.genericeditor.GenericEditor">
   		</editorContentTypeBinding>
   </extension>
   <extension
         name="SJSON Editor"
         point="org.eclipse.ui.editors">
         <editorContentTypeBinding
               contentTypeId="org.mule.sjson"
               editorId="org.eclipse.ui.genericeditor.GenericEditor">
   		</editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.tm4e.registry.grammars">
      <grammar
            path="grammars/raml.json"
            scopeName="source.raml">
      </grammar>
      <grammar
            path="grammars/syaml.json"
            scopeName="source.syaml">
      </grammar>
      <grammar
            path="grammars/sjson.json"
            scopeName="source.sjson">
      </grammar>
      <scopeNameContentTypeBinding
            contentTypeId="org.mule.raml"
            scopeName="source.raml">
      </scopeNameContentTypeBinding>
      <scopeNameContentTypeBinding
            contentTypeId="org.mule.sjson"
            scopeName="source.sjson">
      </scopeNameContentTypeBinding>
      <scopeNameContentTypeBinding
            contentTypeId="org.mule.syaml"
            scopeName="source.syaml">
      </scopeNameContentTypeBinding>
   </extension>
   <extension
      point="org.eclipse.tm4e.ui.themes">
   		<theme
           id="org.eclipse.tm4e.ui.themes.OasTheme"
           name="OasTheme"
           path="themes/raml.css">
   		</theme>
   		<themeAssociation
   		   scopeName="source.raml"
           themeId="org.eclipse.tm4e.ui.themes.OasTheme">
   		</themeAssociation>
   		<themeAssociation
   		   scopeName="source.sjson"
           themeId="org.eclipse.tm4e.ui.themes.OasTheme">
   		</themeAssociation>
   		<themeAssociation
   		   scopeName="source.syaml"
           themeId="org.eclipse.tm4e.ui.themes.OasTheme">
   		</themeAssociation>
	</extension>
</plugin>
